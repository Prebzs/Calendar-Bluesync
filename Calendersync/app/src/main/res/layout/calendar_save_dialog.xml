<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/calender_save_dialog_receive"
        android:text="RECEIVED TEXT"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/calender_save_dialog_owner"
        android:textAlignment="center"
        android:textColor="@color/colorDarkBlue"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        android:text="OWNER"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/calender_save_dialog_sync"
        android:text="RECEIVED TEXT"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="5dp"/>

    <Spinner
        android:id="@+id/calender_save_dialog_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="@android:drawable/btn_dropdown"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        />

    <CheckBox
        android:id="@+id/calender_save_dialog_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Save Backup (override old)"
        android:padding="4dp"
        android:checked="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        />


</LinearLayout>